/* pages/kaidan/confirm-order/confirm-order.wxss */
@import "../template/order-goods/order-goods.wxss";


.btn-success {
  background: linear-gradient(90deg, rgba(255, 184, 0, 1), rgba(255, 130, 0, 1));

}
/* 地址 */
.location-back {
  width: 90%;
    margin: 10rpx auto;
  border-radius: 20rpx;
  /* height: 130rpx; */
  /* background: #f2f2f2; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;

}
textarea{
  height: 110rpx;
}
.location {
  width: 100%;
  /* height: 90rpx; */
  background: #fff;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
    margin: 10rpx;
}

.location image {
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
}

.infomation {
  display: flex;
  font-size: 29rpx;
  flex-flow: row;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.infomation view {
  padding: 10rpx;
  display: flex;
  justify-content: flex-start;
    flex-flow: column;
}

.infomation view>text:first-child {
  font-weight: bold;
  font-size: 28rpx;
  color: #000;

}
.infomation view>text {
  font-size: 25rpx;
  color: gray;
  margin: 2rpx;
  
}
/* 商品 */
.container {
  width: 100%;
  margin: 0 auto;
  min-height: 100vh;
  /* height: 100%; *//* margin: 0 20rpx; */
  margin-bottom: 110rpx;
  font-size: 36rpx;
  color: #333;
  background: #f9f9f9;
  box-shadow: 5rpx 5rpx 5rpx #fff;
  padding-top: 20rpx;
  border-radius: 20rpx;
}

.scroller {
  height: 100%;
}

.msg {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.msg input {
  height: 60rpx;
  border: none;
  text-align: right;
  padding-right: 10rpx;
}

.goods-list {
  background: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
    width: 90%;
  margin: 0 auto;
}

.list-content .total {
  display: flex;
  justify-content: space-between;
  height: 84rpx;
  line-height: 84rpx;
  padding: 0 30rpx;
}
.total{
  border-bottom: 1px solid #f2f2f2;
}
.list-content .total .totalMoney,.van-cell__value {
  color: #ff8200 !important;
}

.border-top {
  border-top: 1rpx solid #f2f2f2;
}

.footer {
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.footer .total {
  font-size: 32rpx;
  color: #333;
  margin-left: 30rpx;
}

.footer .total view {
  display: inline-block;
  color: #ff8200;
}

.footer .collect-money {
  width: 180rpx;
  height: 100%;
  line-height: 100rpx;
  border: none;
  border-radius: 0;
  color: #fff;
  font-size: 32rpx;
}
