page {
  height: 100%;
  width: 100%;
  background: #f5f5f9;
  font-size: 30rpx;
}

.address {
  width: 100%;
  background: #fff;
  padding:10rpx 10rpx 0rpx 10rpx; 
}

.addRe {
  width: 95%;
  height: 100%;
  background: #fff;
  padding: 10rpx;
}

.infomation {
  width: 100%;
  display: flex;
  font-size: 33rpx;
  flex-flow: column;
  border-bottom: 1rpx solid #f2f2f2;
   
}

.infomation view {
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
}
.infomation view:last-child{
  font-size: 28rpx;
}
.set {
  margin: 10rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
 
}
.set image{
  width: 40rpx;
  height: 40rpx;
}
.set view text:first-child
{
color: #4DBAC1;
font-size: 25rpx;
 margin: 20rpx;
 text-align: center;
}
.set view:last-child text
{
color: red;
font-size: 25rpx;

}
button{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90;
  color: white;
  background: rgb(253, 140, 118);
}
.warn{
  background: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  flex-direction: column;

}
.shopList{
  width: 100%;

  display: inline-flex;
  justify-content: flex-start; 
  align-items: center; 
  border-bottom:1rpx solid #fff;
  flex-flow: row;
  margin: 10rpx;
  padding: 10rpx;
}
