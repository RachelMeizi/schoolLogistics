
/* 左侧滑出层 */

page,.page {
  height: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
/* 公告 */
.notice-bar{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 33;

}

/*左侧导航列表  */
.page-bottom{
  height: 100%;
  width: 75%;
  position: fixed; 
  background-color: rgb(40, 40, 40);
  z-index: 0;
  
}
.page-list{
  width: 100%;
  color: white;
  padding: 25rpx 0 25rpx 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;

}
.headurl{
  display: flex;
  justify-content: flex-start;
  align-items:center;
  color: white;
}
.headurl>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin: 20rpx;
}
.login{
 margin-top: 20rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50rpx;
  background: rgb(251, 227, 137);

}
.open_list>button{
  font-size: 30rpx;
  color: #fff;
  background: rgb(40, 40, 40);
  text-align: left;
  }
/*右侧展示层  */
.page-top{
  position: relative;
  top: 0;
  left:0;
  width: 100%;
  height: 100%;
  background-color:#fff;
  z-index: 0;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}

.page-state{
  transform: rotate(0deg) scale(1) translate(75%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(75%,0%); 
}
.imgw{width:100%;
/* height: 300rpx; */
}

/*右侧列表按钮  */
.page-top .left-nav{
  position: fixed;
  width: 68rpx;
  height: 68rpx;
  /* width: 300rpx;
  height: 300rpx; */
  left: 20rpx;
  bottom: 20rpx;
}

/*右侧遮罩层  */
.page-mask{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.5);
  z-index: 998;
}
.page-mask-show{
  display: none;
}

/* //导航 */
.best-rider-container {
  /* border-top: 2rpx solid #eee; */
  border-bottom: 2rpx solid #eee;
  /* padding:0 20rpx;  */
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  height: 200rpx;
  background: #fff;
  padding: 20rpx 0rpx;
}

.best-rider, .rider-ranking {
  padding: 20rpx;
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.best-rider {
  border-right: 1rpx solid #f2f2f2;
}

.rider-info {
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}
.rider-info>image{
  width: 140rpx;
  height: 100rpx;
}
.rider-time{
  font-size: 28rpx;
}
.rider-name {
  font-weight: bold;
  color: #000;
}

.rider-count {
  font-size: 22rpx;
}

.rider-img {
  width: 120rpx;
  height: 80%;
  align-self: center;
  border-radius: 6rpx;
}
.posiztion{
  width: 100%;
  position: fixed;
  left:0;
  bottom: 0;
}
.iconCar{
width: 40rpx;
height: 40rpx;
}
