/* pages/shopmall/buycar/buycar.wxss */

/* 购物车列表 */

page {
  background: #f3f7f7;
  height: 100%;
  width: 100%;
  display: flex;
  font-size: 28rpx;
  flex-direction: column;
}

.header {
  padding: 0 20rpx;
  background: #fff;
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #efefef;
}

.check_box {
  flex: 1;
  display: flex;
  line-height: 90rpx;
  font-size: 30rpx;
  align-items: center;
}

.check_img {
  width: 60rpx;
  height: 60rpx;
}

.add {
  width: 300rpx;
  height: 300rpx;
  margin-left: 10rpx;
}

.check_text {
  margin-left: 15rpx;
  line-height: 90rpx;
}

.header_text {
  font-size: 30rpx;
  line-height: 90rpx;
  padding: 0 6rpx;
  color: #f94133;
}

.main {
  flex: 1;
  overflow: auto; /* winphone8和android4+ */
  -webkit-overflow-scrolling: touch; /* ios5+ */
  padding-bottom: 102rpx;
}

.shop {
  background: #fff;
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #efefef;
}

.shop_check_box {
  margin-top: 45rpx;
}

.shop_img {
  width: 150rpx;
  height: 150rpx;
  margin: 0 20rpx;
}
.radio-group{
  margin-top: 10rpx;
}
radio{
margin: 5rpx;
}
.shop_detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop_name {
  font-size: 30rpx;
  line-height: 40rpx;
  display: block;
  max-height: 80rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  flex: 1;
}

.shop_type {
  display: block;
  font-size: 26rpx;
  color: #ccc;
  line-height: 50rpx;
}

.shop_detail-top {
  display: flex;
}

.shop_detail_bottom {
  display: flex;
}

.shop_price {
  line-height: 50rpx;
  flex: 1;
  color: #f94133;
  font-size: 30rpx;
}

.num_change {
  display: flex;
  padding-top: 11rpx;
}

.shop_num {
  line-height: 38rpx;
  height: 38rpx;
  width: 60rpx;
  text-align: center;
  font-size: 30rpx;
}

.add_icon, .minus_icon {
  width: 34rpx;
  height: 34rpx;
}

/* //移除购物车 */

.deleteshop {
  background: #f94133;
  color: white;
  padding: 10rpx 20rpx;
  line-height: 50rpx;
  border-radius: 50rpx;
  box-shadow: 5rpx 5rpx 5rpx #ccc;
}

/* 去结算 */

.comfirm-buy {
  position: fixed;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #f2f2f2;
  bottom: 0;
  left: 0;
  display: flex;
  font-size: 24rpx;
  background: #fff;
  justify-content: space-around;
  align-items: center;
}

.all-money {
  width: 50%;
  /* text-align: right; */
  font-size: 30rpx;
  line-height: 100rpx;
  background: rgb(253, 140, 118);
  font-weight: 600;
  padding-right: 20rpx;
  box-sizing: border-box;
  color: #fff;
  text-align: center;
}

.all-money > text {
  color: #f00;
}

.go-pay {
  /* margin-left: 100rpx; */
  width: 50%;
  line-height: 100rpx;
  background: rgb(254, 238, 116);
  color: #000;
  font-weight: 600;
  text-align: center;
  font-size: 30rpx;
}

.noList{
width: 100%;
height: 600rpx;
display: flex;
justify-content: center;
align-items: center;
flex-flow: column;
font-size: 40rpx;
color: rgb(255, 170, 12);
}
.noList>image{
  width:570rpx;
  height:300rpx ;
}




.del{
  position: relative;
  left: 5rpx;
  top: 60rpx;
  /* margin: 10rpx; */
  width: 40rpx;
  height: 40rpx;
  
}