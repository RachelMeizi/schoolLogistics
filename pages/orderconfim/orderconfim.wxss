/* pages/logs/orderForm/orderconfim/orderconfim.wxss */

page {
  width: 100%;
  height: 100%;
  background: #f5f5f9;
}

.order {
  width: 100%;
  background: #fff;
}

/* 地址 */

.location-back {
  width: 100%;
  height: 130rpx;
  background: #f2f2f2;

  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;

}
textarea{
  height: 110rpx;
}
.location {
  width: 100%;
  height: 90rpx;
  background: #fff;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
    margin: 10rpx;
}

.location image {
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
}

.infomation {
  width: 100%;
  display: flex;
  font-size: 29rpx;
  flex-flow: row;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
}

.infomation view {
  padding: 10rpx;
  display: flex;
  justify-content: flex-start;
    flex-flow: column;
}

.infomation view>text:first-child {
  font-weight: bold;
  font-size: 28rpx;

}
.infomation view>text {
  font-size: 25rpx;
  color: gray
}

/* 商品信息 */

.content {
  width: 100%;
  /* height: 150rpx; */
  margin-top: 20rpx;
  background: #f5f5f9;
  display: flex;
flex-flow: column;
}
.item-wrpg{
 width: 100%;
 border-bottom: 1rpx solid #fff;
 margin: 10rpx;
}
.item-wrpg>image {
  margin-left: 20rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 10%;
  float: left;
}

.allinfomation {
  width: 70%;
  float: left;
  margin-left: 20rpx;
}

.allinfomation view {
  margin-top: 10rpx;
  width: 100%;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.allinfomation view:last-child {
  font-size: 27rpx;
  color: gray;
}

.radio-group{
  margin-top: 10rpx;
}
radio{
margin: 5rpx;
}
.right-box-name{
    display: flex;
  justify-content: space-between;
}
.goodsName{
  width: 50%;
  overflow: hidden;
}
.right-box{
  display: flex;
  justify-content: flex-end;
  flex-flow: column wrap;
}

/* 列表 */

.subjectList {
  width: 95%;
  padding: 26rpx;
  display: flex;
  border-bottom: 1rpx solid #f2f2f2;
  justify-content: space-between;
  align-items: baseline;
  font-size: 30rpx;
}
.desc{
flex-flow: column wrap;
 align-items: flex-start;
  justify-content: space-flex;

}

.subjectList text:last-child {
  color: red;
}

.btn button {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  color: #fff;
  background: rgb(253, 140, 118);
}

button {
  border-radius: 0;
}

/* //导航 */

.tabList{
  width: 200rpx;
padding: 10rpx;
  display: flex;
  background: #fff;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  color: rgb(123, 166, 209);
  border: 1rpx solid rgb(123, 166, 209);
  overflow: hidden;
}
.tabList>text{
  width: 100%;
  padding: 0 12rpx;

}
.on{
  background: rgb(123, 166, 209);
  border-radius: 50rpx;
  color: white;
  padding: 5rpx 12rpx;
}
.shuoming{
  display: flex;
  flex-flow: column;
  background: #fff;
  font-size: 25rpx;

}
.time{
  margin-bottom: 100rpx;
}