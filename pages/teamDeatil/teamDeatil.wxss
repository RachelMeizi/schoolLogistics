/* pages/company/teamDeatil/teamDeatil.wxss */

.new {

  display: flex;
  justify-content: flex-start;
  margin: 10rpx;
  padding: 10rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
.tip{
  font-weight: bold;
}
.new image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.new view {
  display: flex;
  justify-content: space-between;
  flex-flow: column nowrap;
  margin-left: 10rpx;
  font-size: 30rpx;
}
.teamjobTitles{
  font-size: 30rpx;
  font-weight: normal;
  margin-top: 10rpx;
} 

.new view>text:last-child  {
  font-size: 30rpx;
  /* font-weight: bold; */
  margin-left: 10rpx;
}

.new-border {
  border: 1rpx solid #f2f2f2;
  font-size: 28rpx;
  font-weight: normal;
  margin: 10rpx 10rpx;
  padding: 10rpx 10rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-flow: row;
}

.phonecolor {
  color: green;
  width: 400rpx;
  background-color: #fff;
  border-radius: 0rpx;
  padding: 0rpx;
  margin: 0rpx;
  font-size: 28rpx;
}

/* //去掉按钮边框 */

.phonecolor::after {
  border: 0;
}